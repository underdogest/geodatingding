<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maddy.dating.Profileinstellungen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.maddy.dating.Profileinstellungen">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#10428e"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profilbild ändern"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profilbild löschen"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textName"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:paddingBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editTextName"
        android:layout_alignBottom="@+id/textName"
        android:layout_toRightOf="@+id/textName"
        android:layout_toEndOf="@+id/textPasswort"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="-Name-" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geburtsdatum:"
        android:id="@+id/textGebDatum"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:layout_below="@+id/textName"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textGebDatum"
        android:layout_toRightOf="@+id/textGebDatum"
        android:layout_toEndOf="@+id/textGebDatum"
        android:text="-Datum-"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geschlecht:"
        android:id="@+id/textGeschlecht"
        android:layout_below="@+id/textGebDatum"
        android:layout_alignLeft="@+id/textGebDatum"
        android:layout_alignStart="@+id/textGebDatum"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textGeschlecht"
        android:layout_alignLeft="@+id/textGeschlecht">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="männlich"
            android:id="@+id/radioButtonMännlich" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weiblich"
            android:id="@+id/radioButtonWeiblich" />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suche:"
        android:id="@+id/textOrientierung"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textGeschlecht"
        android:layout_toRightOf="@+id/textGebDatum"
        android:layout_toEndOf="@+id/textGebDatum" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textOrientierung"
        android:layout_below="@+id/textOrientierung">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="männlich"
            android:id="@+id/radioButtonMännlichOri" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weiblich"
            android:id="@+id/radioButtonWeiblichOri" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interessen:"
        android:id="@+id/textView7"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/textName"
        android:layout_alignStart="@+id/radioGroup"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eingabeInteressen"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:text="-Interessen-"
                android:layout_alignBottom="@+id/textView7" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/buttonSpeichern"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verwerfen"
        android:id="@+id/buttonVerwerfen"
        android:layout_alignTop="@+id/buttonSpeichern"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
